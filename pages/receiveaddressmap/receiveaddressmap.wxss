.wrap{
  position:fixed;
  width:100%;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  height:100%;
}
.search_btn{
  display:flex;
  flex-direction: row;
  height:112rpx;
  background:#FFF;
}
.search_input{
  display:flex;
  flex-direction: row;
  flex:1;
  align-items: center;
  margin:18rpx 33rpx;
  background:#f3f5f7;
  color:#999;
  font-size:30rpx;
  border-radius: 3rpx;
}
.search_city{ 
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width:180rpx;
  color:#333;
}
.search_address{
  padding-left:22rpx;
}
.map{
  width:100%;
  flex:1;
}
.near_address_list{
  height:470rpx;
  overflow-y: auto;
}
.near_address{
  display:flex;
  flex-direction: column;
  justify-content: center;
  padding-left:33rpx;
  height:140rpx;
  font-size:32rpx;
  color:#333;
  border-bottom:1rpx solid #d7d7d7;
}
.near_address_title{
  color:#999;
  font-size:26rpx;
  padding-top:20rpx;
}