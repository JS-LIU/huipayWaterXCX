.wrap{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background:#f8f8f8;
  z-index:0;
}
.guess_product_list{
  position:relative;
  display:flex;
  justify-content: space-between;
  flex-wrap:wrap;
  background:#f3f5f7;
}
.guess_product{
  height:530rpx;
  width:calc(50% - 2rpx);
  background:#FFF;
  margin-top:4rpx;
}
.guess_product_img{
  display:block;
  height:373rpx;
  width:100%; 
}
.guess_product_info{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  height:157rpx;
}
.guess_product_name{
  margin:10rpx 24rpx 0;
  color:#333;
  font-size:32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.guess_product_volume{
  padding-left:10rpx;
  font-size:32rpx;
  color:#333;
}
.guess_product_price{
  margin-left:24rpx;
  font-size:32rpx;
  color:#ff2d2d; 
}
.guess_product_unit{
  font-size:24rpx;
}
.guess_product_saleMount{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left:24rpx;
  color:#999;
  font-size:24rpx;
}
.add_to_shopping_cart_btn{
  display:block;
  width:62rpx;
  height:38rpx;
}
.add_to_shopping_cart_img{
  display:block;
  width:38rpx;
  height:38rpx;
}
.sort_list{
  position:relative;
  display:flex;
  flex-direction: row;
  height:100rpx;
  background:#fff;
  align-items: center;
}
.sort_list_item{
  display:flex;
  flex:1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #d7d7d7;
  font-size:30rpx;
  color:#333;
  margin-right:-1rpx;
}
.selected_color{
  color:#4dc0ff;
}
.panel_wrap{
  position:fixed;
  height:100%;
  width:100%;
  top:0;
  left:0;
  background:#000;
  opacity: 0.8;
  z-index: 1;
}
.tag_panel{
  position:fixed;
  height:100%;
  width:690rpx;
  top:0;
  right:-690rpx; 
  background:#FFF;
  z-index:2;
}
.tag_panel_bottom{
  position:absolute;
  left:0;
  bottom:0rpx;
  height:90rpx;
  width:100%;
  display:flex;
  flex-direction: row;
}
.tag_panel_title{
  font-size:30rpx;
  color:#333;
  margin-left:24rpx;
}
.tag_panel_title_brand{
  margin-top:44rpx;
}
.tag_panel_item{
  flex:1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size:34rpx;
  color:#333;
}
.tag_panel_confirm{
  color:#fff;
  background:#4dc0ff;
}
.tag_panel_list{
  display:flex;
  flex-direction: row; 
  flex-wrap:wrap;
}
.tag_panel_tag_item{
  width:200rpx;
  height:60rpx;
  background:#f1f2f6;
  font-size:26rpx;
  color:#333;
  margin:18rpx 4rpx 0 20rpx; 
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}
