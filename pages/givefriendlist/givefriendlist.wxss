/* pages/givefriendlist/givefriendlist.wxss */
.wrap{
  background:#F5F5F5;
  height:100%;
  width:100%;
  position:fixed;
}
.friend_list{
  position:relative;
  background:#FFF;
}
.friend_item{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top:1rpx solid #F5F5F5;
  height:120rpx;
}
.friend_left{
  display:flex;
  flex-direction: row;
  align-items: center;

}
.friend_icon{
  width:70rpx;
  height:70rpx;
  border-radius: 6rpx;
  margin-left:30rpx;
}
.friend_name_info{
  display:flex;
  flex-direction: column;
  justify-content: center;
  margin-left:22rpx;
}
.friend_name{
  font-size:28rpx;
  color:#333;
}
.huibei_code{
  font-size:24rpx;
  color:#999;
}
.increase_money{
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-right:30rpx;
  color:#333;
}
.increase_unit{
  font-size:30rpx;
}
.increase_count{
  font-size:32rpx;
}
.money_unit{
  width:18rpx;
  height:18rpx;
}