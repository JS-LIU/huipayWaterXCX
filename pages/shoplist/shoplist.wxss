/* pages/shop/shop.wxss */
.fulladdress{
  height:84rpx;
  background:#f3f5f7;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.fulladdress_text{
  font-size: 30rpx;
  color:#333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:600rpx;
}
.address_show{
  display: flex;
  flex-direction: row;
  align-content: center;
}
.address_icon{
  margin: 2rpx 10rpx 0 30rpx;
  width:29rpx;
  height:34rpx;
}
.address_line{
  display:flex;
  width:100%;
  height:4rpx;
}
.right_arrow{
  width:18rpx;
  height:30rpx;
  margin-right:30rpx;
}

.shop{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left:14rpx;
  height:240rpx;
  border-bottom:1rpx solid #d7d7d7;
}
.shop_img{
  margin-right:24rpx;
  display:flex;
  width:210rpx;
  height:210rpx;
  border:1rpx solid #e3e3e3;
  border-radius: 4rpx;
}
.shop_info{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  flex:1;
  height:200rpx;
  margin-right:40rpx;
}
.shop_name{
  font-size:32rpx;
  color:#333;
}
.shop_sale_mount{
  font-size:24rpx;
  color:#999;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.shop_score{
  display:flex;
  flex-direction: row;
  margin-right:26rpx;
}
.shop_start_icon{
  display:flex;
  width:21rpx;
  height:21rpx;
  margin-right:8rpx;
}
.shop_address{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size:24rpx;
  color:#999;
}
.shop_address_text{
  display:flex;
  align-items: center;
}
.shop_address_icon{
  margin:2rpx 10rpx 0 0;
  width:29rpx;
  height:34rpx;
}
.shop_address_name{
  width:330rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}