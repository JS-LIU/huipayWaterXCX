/* pages/givewaterticket.wxss */
.wrap{
  position:fixed;
  left:0rpx;
  top:0rpx;
  height:100%;
  width:100%;
  background:#F5F5F5;
}
.give_header{
  position:relative;
  background:#FFF;
  display:flex;
  flex-direction: row;
}
.give_header_item{
  display:flex;
  flex:1;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding:50rpx 0;
  height:155rpx;
}
.give_header_img_text{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height:88rpx;
  font-size:26rpx;
  color:#333;
  
}
.sale_award_price,.invite_red_pocket_price,.my_friend_count{
  font-size:30rpx;
  color:#FF4E4E;
}
.my_friend_icon{
  width:50rpx;
  height:38rpx;
}
.invite_red_pocket{
  width:35rpx;
  height:42rpx;
}
.sale_award{
  width:40rpx;
  height:40rpx;
}
.give_body{
  position:relative;
  background:#FFF;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top:20rpx;
}
.red_pocket{
  width:690rpx;
  height:190rpx;
  margin:36rpx auto;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background:#FFF;
  box-shadow:0 0 10px rgba(0, 0, 0, 0.3)
}
.money{
  color:#FF4E4E;
  font-size:60rpx;
}
.money_text{
  color:#333;
  font-size:28rpx;
  margin-top:28rpx;
}
.invite_slogon{
  margin-top:90rpx;
  width:490rpx;
  height:64rpx;
}
.share_red_pocket_img{
  width:564rpx;
  height:404rpx;
}
.red_pocket_explan_text{
  margin-top:90rpx;
  width:690rpx;
  font-size:26rpx;
  color:#777;
}
.share_button{
  margin-top:34rpx;
  width:690rpx;
  height:80rpx;
  color:#FFF;
  background:#4dc0ff;
  font-size:34rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 6rpx;
  border:none;
}
.share_img_introduce{
  position:relative;
  display:flex;
  flex-direction: row;
  justify-content: center;
  background:#FFF;
  width:100%;
  height:210rpx;
  margin-top:70rpx;
  padding-bottom:70rpx;
}
button::after{ border: none; }
.share_img_introduce_img{
  position:absolute;
  top:0;
  margin:0 auto;
  width:648rpx;
  height:210rpx;
}
.share_img_introduce_text{
  position:absolute;
  top:-15rpx;
  font-size:28rpx;
  color:#777;
}
.to_give_friend_list{

  position:relative;
  margin-top:30rpx;
  height:100rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size:30rpx;
  color:#333;
  background:#FFF;
}
.to_give_friend_list_left{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.give_friend_list_icon{
  width:44rpx;
  height:44rpx;
  margin:0 24rpx 0 30rpx;
}
.arrow_right{
  width:18rpx;
  height:30rpx;
  margin:0 30rpx 0 15rpx;
}
.money_unit{
  width:23rpx;
  height:23rpx;
  margin-right:5rpx;
}