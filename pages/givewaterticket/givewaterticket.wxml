<!--pages/givewaterticket.wxml-->
<view class='wrap'></view>

<view class='give_body'>
  <view class='red_pocket'>
    <view class='red_money'>
      <image class='money_unit' src='../images/symbol_xiteng@2x.png' mode="aspectFit"></image>
      <text class='money'>{{totalXb}}</text>
    </view>
    <text class='money_text'>累计奖励喜币红包</text>
  </view>
    <image mode='aspectFit' src='../images/yaoqing_slogon@2x.png' class='invite_slogon'></image>
    <text class='money_text'>(红包金额0~10喜币随机)</text>
    <image src='../images/dingshui_photo_present@2x.png' class='share_red_pocket_img'></image>
    <view class='red_pocket_explan_text'>你邀请1个朋友免费领取喜腾山泉天然矿泉水1桶（水票），你可获赠喜币红包，邀请越多，奖励越多！</view>
    <button open-type='share' class='share_button'>立即赠送</button>
    <view class='share_img_introduce'>
      <image mode='aspectFit' class='share_img_introduce_img' src='../images/yaoqing_icon_zengsong@2x.png'></image>
      <text class='share_img_introduce_text'>如何赠送好友</text>
    </view>
    
  </view>
<navigator class='to_give_friend_list' url='/pages/givefriendlist/givefriendlist'>
  <view class='to_give_friend_list_left'>
    <image src='../images/yaoqing_icon_renqun@2x.png' mode='aspectFit' class='give_friend_list_icon'></image>
    <text>赠送好友（{{friendAcceptActivityListCount}}）</text>
  </view>
  <image src='../images/me-arrow@2x.png' mode='aspectFit' class='arrow_right'></image> 
  
</navigator>


