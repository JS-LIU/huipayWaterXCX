  height:280rpx;
  display:flex;
  flex-direction: column;
}
.shop_top{
  padding:30rpx 30rpx 0;
  height:90rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.shop_top_left{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.shop_icon{
  width:90rpx;
  height:90rpx;
}
.shop_name{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left:20rpx;
  height:75rpx;
  font-size:30rpx;
  color:#333;
}
.shop_score{
  display:flex;
  flex-direction: row;
  margin-right:26rpx;
}
.shop_start_icon{
  display:flex;
  width:21rpx;
  height:21rpx;
  margin-right:8rpx;
}
.shop_enter_btn{
  font-size:30rpx;
  color:#4dc0ff;
  border:1rpx solid #4dc0ff;
  width:158rpx;
  height:53rpx;
  text-align: center;
  line-height: 53rpx;
}
.shop_bottom{
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding-top:23rpx;
  height:70rpx;
}
.shop_bottom_item{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size:32rpx;
  color:#333;
}
.shop_bottom_item_title{
  font-size:26rpx;
  color:#999;
}
