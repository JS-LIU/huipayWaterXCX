  padding:0 20rpx 0 30rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.water_ticket_details{
  position: absolute;
  width:663rpx;
  height:287rpx;
}
.water_ticket_item{
  position:relative;
  margin-right:10rpx;  
  display:flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.water_ticket_img{
  width:222rpx;
  height:107rpx;
}
.water_ticket_small_name{
  position:absolute;
  left:40rpx;
  width:180rpx;
  text-align: center;
  color:#fbf800;
  font-size:30rpx;
}
.recomment_list{
  position:relative;
  background:#fff;
  margin-top:30rpx;
}
.recomment_title{
  height:90rpx;
  padding-left: 30rpx;
  font-size:30rpx;
  color:#333;
  display:felx;
