  line-height: 90rpx;
}
.shop_product_list{
  display:flex;
  justify-content: space-between;
  flex-wrap:wrap;
  background:#f3f5f7;
  padding-bottom:97rpx;
}
.shop_product{
  height:530rpx;
  width:calc(50% - 2rpx);
  background:#FFF;
  margin-top:4rpx;
}
.shop_product_img{
  display:block;
  height:373rpx;
  width:100%; 
}
.shop_product_info{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  height:157rpx;
}
.shop_product_name{
  margin:10rpx 24rpx 0;
  color:#333;
  font-size:32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.shop_product_volume{
  padding-left:10rpx;
  font-size:32rpx;
  color:#333;
}
.shop_product_price{
  margin-left:24rpx;
  font-size:32rpx;
  color:#ff2d2d; 
}
.shop_product_unit{
  font-size:24rpx;
}
.shop_product_saleMount{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left:24rpx;
  color:#999;
  font-size:24rpx;
}
.add_to_shopping_cart_btn{
  display:block;
  width:62rpx;
  height:38rpx;
}
.add_to_shopping_cart_img{
