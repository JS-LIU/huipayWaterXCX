.wrap{
  position: fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
  background:#f8f8f8;
}
.product{
  position:relative;
  background:#fff;
}
.c_pic_list{
  height:750rpx;
  border-bottom:1rpx solid #d7d7d7;
}
.c_pic_item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.c_pic_img{
  width:100%;
}
.water_ticket{
  position: relative;
  background:#fff;
  margin-top:30rpx;
}
.water_ticket_top{
  position:relative;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height:340rpx;
  border-bottom:1rpx solid #d7d7d7;
}
.water_ticket_name{
  position:relative;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  height:120rpx;
  font-size:62rpx;
  font-weight: bold;
  color:#FFF;
}
.water_ticket_volume{
  font-size:28rpx;
  font-weight: normal;
  text-align: center;
}
.water_ticket_smallName{
  position: absolute;
  bottom:65rpx;
  right:85rpx;
  width:120rpx;
  height:35rpx;
  font-size:24rpx;
  color:#FFF;
  background:#FF8752;
  text-align: center;
  border-radius: 3rpx;
}
.water_ticket_right{
  position:absolute;
  top:110rpx;
  font-size:54rpx;
  right:105rpx;
  display:flex;
  flex-direction: column;
  align-items: center;
  color:#FFF;
}
.water_ticket_unit{
  font-size:40rpx;
}
.product_info{
  height: 200rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  padding:0 30rpx;
  border-bottom:1rpx solid #d7d7d7;
}
.product_info_top{
  display:flex;
  flex-direction: row;
  align-items: center;
  padding-top:10rpx;
}
.product_info_jd_type{
  margin-right:15rpx;
  padding:0 5rpx;
  color:#ff4342;
  font-size:26rpx;
  border:1rpx solid #ff4342;
  border-radius: 5rpx;
}
.product_info_name{
  font-size:32rpx;
  color:#333;
  padding-right:15rpx;
}
.product_info_volume{
  font-size:32rpx;
  color:#777;
}

.product_info_bottom{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  font-size:26rpx;
  color:#777;
  align-items: center;
}
.product_info_current_price_unit{
  color:#ff4342;
}
.product_info_current_price{
  font-size:34rpx;
  color:#ff4342;
  padding-right:20rpx;
}
.product_comment{
  position:relative;
  background:#fff;
  margin-top:30rpx;
}
.product_comment_title{
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height:90rpx;
  padding-left: 30rpx;
  border-bottom:1rpx solid #d7d7d7;
  font-size:30rpx;
  color:#333;
}
.product_comment_viewmore{
  display:flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.right_arrow{
  width:15rpx;
  height:25rpx;
  margin:0 30rpx 0 10rpx;

}
.product_comment_content{
  display:flex;
  flex-direction: column;
  padding:0rpx 30rpx 22rpx 30rpx;
  border-bottom:1rpx solid #d7d7d7;
}
.product_comment_top{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top:20rpx;
  height:60rpx;
}
.product_comment_top_left{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.user_icon_url{
  width:50rpx;
  height:50rpx;
  border-radius: 50rpx;
}
.product_comment_name_info{
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left:20rpx;
}
.product_comment_name{
  font-size:28rpx;
  color:#333;
}
.product_comment_time{
  font-size:26rpx;
  color:#999;
}
.comment_img_list{
  display:flex;
  flex-direction: row;
  
}
.comment_img{
  width:160rpx; 
  height:160rpx;
  border:1rpx solid #d7d7d7;
  margin-top:22rpx;
}
.product_comment_score{
  display:flex;
  flex-direction: row;
}
.product_comment_score_start{
  width:21rpx;
  height:21rpx;
  margin-right:8rpx;
}
.comment_comment{
  font-size:26rpx;
  color:#777;
  padding-top:30rpx;
}
.shop{
