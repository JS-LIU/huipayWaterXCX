}
.bottom_tab_img{
  display: flex;
  width:40rpx;
  height:39rpx;
}

.bottom_to_settle,
.add_to_shopping_cart{
  display:flex;
  flex:2; 
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background:#ff2d2d;
  color:#FFF;
  font-size:34rpx;
}
.add_to_shopping_cart{
  background:#FFB400;
}
