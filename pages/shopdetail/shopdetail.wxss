/* pages/shopdetail/shopdetail.wxss */
.wrap{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:#F8F8F8;
}
.shop_img{
  position:relative;
  display: flex;
  width:100%;
  height:560rpx;
}

.shop_name{
  position:relative;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left:24rpx;
  height:94rpx;
  background:#FFF;
  font-size:36rpx;
  color:#333;

}
.shop_score{
  display:flex;
  flex-direction: row;
  margin-right:26rpx;
}
.shop_start_icon{
  display:flex;
  width:21rpx;
  height:21rpx;
  margin-right:8rpx;
}
.shop_address,.shop_time{
  margin-top:30rpx;
}
.shop_info_item{
  position:relative;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left:24rpx;
  height:100rpx;
  color:#666;
  font-size:30rpx;
  border-bottom:#e3e3e3;
  background:#FFF;
}
.shop_address_info,.shop_time_info,.shop_range_info{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.shop_icon{
  width:33rpx;
  height:42rpx;
}
.shop_info_text{
  padding-left:20rpx;
}
.shop_info_right{
  padding-right:24rpx;
}
