/* pages/customeraddresslist/customeraddresslist.wxss */
.wrap{
  position:fixed;
  left:0rpx;
  top:0rpx;
  height:100%;
  width:100%;
  background:#F8F8F8;
}
.address{
  padding:0 20rpx;
  height:135rpx;
  background:#FFF;
  display:flex;
  flex-direction: column;
  justify-content: center;
  margin:5rpx 0 30rpx;
}
.address_user_info{
  display:flex;
  flex-direction: row;
  font-size:30rpx;
  color:#333;
}
.address_user_phone_num{
  padding-left:60rpx;
}
.location_info{
  padding-top:10rpx;
  font-size:24rpx;
  color:#777;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.create_address_btn{
  height:80rpx;
  margin:80rpx 30rpx 0;
  background:#399cfe;
  color:#FFF;
  font-size:36rpx;
  text-align: center;
  line-height: 80rpx;
}
.address_tag{
  width:70rpx;
  height:30rpx;
  border:1rpx solid #399cfe;
  font-size:26rpx;
  color:#399cfe;
  text-align: center;
  margin-left:20rpx;
}
