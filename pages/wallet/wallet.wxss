}
.my_bank_item_img{
  width:36rpx;
  height:32rpx;
}
.wallet_fun_count_item{
  color:#FF4F4E;
  font-size:30rpx;
  margin-top:40rpx;
}
.wallet_fun_count_item_big{
  font-size:40rpx;
